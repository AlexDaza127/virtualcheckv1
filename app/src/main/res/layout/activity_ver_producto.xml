<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerProducto">

    <EditText
        android:id="@+id/edtProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="188dp"
        android:layout_marginLeft="189dp"
        android:layout_marginRight="188dp"
        android:layout_marginStart="189dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="Producto"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtCodBarras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtApeCliente" />

    <EditText
        android:id="@+id/edtCodBarras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="188dp"
        android:layout_marginLeft="189dp"
        android:layout_marginRight="188dp"
        android:layout_marginStart="189dp"
        android:ems="10"
        android:hint="Precio C/U"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtProd" />

    <ImageButton
        android:id="@+id/imbCamara"
        android:layout_width="69dp"
        android:layout_height="68dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="261dp"
        android:layout_marginLeft="262dp"
        android:layout_marginRight="261dp"
        android:layout_marginStart="262dp"
        android:onClick="escanear"
        app:layout_constraintBottom_toTopOf="@+id/edtApeCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="122dp"
        android:layout_marginLeft="124dp"
        android:layout_marginRight="122dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="16dp"
        android:text="Revisa el precio de tu producto! "
        android:textSize="24sp"
        app:fontFamily="casual"
        app:layout_constraintBottom_toTopOf="@+id/imbCamara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtApeCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="189dp"
        android:layout_marginLeft="188dp"
        android:layout_marginRight="189dp"
        android:layout_marginStart="188dp"
        android:ems="10"
        android:hint="Codigo de Barras"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edtProd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imbCamara" />
</android.support.constraint.ConstraintLayout>